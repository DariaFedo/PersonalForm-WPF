<UserControl x:Class="FormAdvanced.DataArray"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FormAdvanced"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800">
    
    <Grid Background="White">
        
        <!--List of people-->
        <ListView Name="peopleList">
            <ListView.View>
            <GridView>
                <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Name}" />
                <GridViewColumn Header="Surname" Width="200" DisplayMemberBinding="{Binding Surname}" />
                <GridViewColumn Header="Age" Width="200" DisplayMemberBinding="{Binding Age}" />
                    <GridViewColumn Header="Sex" Width="200" DisplayMemberBinding="{Binding Sex}"/>
                </GridView>
        </ListView.View>
        </ListView>
    
    </Grid>
</UserControl>
