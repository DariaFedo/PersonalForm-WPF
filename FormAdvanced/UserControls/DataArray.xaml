<UserControl x:Class="FormAdvanced.DataArray"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FormAdvanced"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="600">
    
    <Border BorderBrush="LightSeaGreen" BorderThickness="3">
    <Grid>
        
        <!--List of people-->
        <ListView Name="peopleData" Background="LightGray" >
            <ListView.View>
            <GridView>
                <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Name}" />
                <GridViewColumn Header="Surname" Width="200" DisplayMemberBinding="{Binding Surname}" />
                <GridViewColumn Header="Age" Width="100" DisplayMemberBinding="{Binding Age}" />
                <GridViewColumn Header="Sex" Width="100" DisplayMemberBinding="{Binding Sex}"/>
            </GridView>
        </ListView.View>
        </ListView>
    
    </Grid>
    </Border>
</UserControl>
